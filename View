package com.neumont.csc150.TheHouse.view;

import java.awt.GridLayout;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.ImageIcon;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class Frame extends JFrame {
	private static final long serialVersionUID = 1L;
	private MainPanel mainPanel;
	private JFrame frame;
	private JPanel gamePanel;

	public Frame(){
		frame = new JFrame("The House");
		mainPanel = new MainPanel(this);
	}

	public void initLauncher(){
		mainPanel.initLauncher();
	}

	public void initGameGui() throws IOException{
		gamePanel = new JPanel();
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().add(mainPanel);
		frame.setSize(800, 800);
		frame.setLocationRelativeTo(null);
		frame.setVisible(true);
		frame.getContentPane().add(gamePanel);
		GridLayout gameLay = new GridLayout(0, 2);
		gamePanel.setLayout(gameLay);
		BufferedImage image1 = ImageIO.read(new File("skele.png"));
		BufferedImage image2 = ImageIO.read(new File("link.gif"));
		JLabel image1Label = new JLabel(new ImageIcon(image1));
		JLabel image2Label = new JLabel(new ImageIcon(image2));		
		gamePanel.add(image1Label);
		gamePanel.add(image2Label);
	}
}
